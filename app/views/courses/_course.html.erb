<div id="<%= dom_id course %>" class="course" onmouseover="ShowDesc(this)" onmouseout="HideDesc(this)">
  <div class="course-details">
    <p class="course-title">
      <%= course.title %>
    </p>

    <p class="course-desc">
      <%= course.desc %>
    </p>
  </div>

  <p>
    <%= image_tag course.cover_url, class:"course-cover" %>
  </p>

</div>

<script>

    function ShowDesc(course) {
      for(const details of course.children)
        if(details.className == "course-details")
          for(const desc of details.children)
            if(desc.className == "course-desc")
              desc.style.display = "block"; //Pokaż
    }

    function HideDesc(course) {
      for(const details of course.children)
        if(details.className == "course-details") //Znajdź wszystkie dzieci z klasy
          for(const desc of details.children)
            if(desc.className == "course-desc") //Znajdź wszystkie dzieci z klasy
              desc.style.display = "none"; //Ukryj
    }

</script>