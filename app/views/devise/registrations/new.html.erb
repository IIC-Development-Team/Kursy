<div class="user_account_back" style="margin-top: 100px;">
  <div class="main-content">
      <div class="login-form">
          <h2 class="edit-acc">Załóż konto</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email, class: "login-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login-input' %>
            </div>

            <div class="field">
              <%= f.label :Nazwa_użytkownika, class: "login-label" %><br />
              <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'login-input' %>
            </div>

            <div class="field">
              <%= f.label :Hasło, class: "login-label" %>
              <% if @minimum_password_length %>
              <em class="login-label">(<%= @minimum_password_length %> znaków minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'login-input' %>
            </div>

            <div class="field">
              <%= f.label :Powtórz_hasło, class: "login-label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'login-input' %>
            </div>

            <div class="actions">
              <%= f.submit "Załóż konto", class: 'edit-button' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
  </div>
</div>