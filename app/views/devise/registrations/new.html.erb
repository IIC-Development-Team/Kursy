<div class="main-content">
    <div class="login-form">
        <h2>Załóż konto</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login-input' %>
          </div>

          <div class="field">
            <%= f.label :Hasło %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> znaków minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'login-input' %>
          </div>

          <div class="field">
            <%= f.label :Powtórz_hasło %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'login-input' %>
          </div>

          <div class="actions">
            <%= f.submit "Załóż konto", class: 'login-submit' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>