<div class = "user_account_back" style="margin-top: 12%;">
  <br>
  <h2 class="edit-acc">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field" style="margin-top: -40px">
      <h1 class="change-data">Email</h1>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "edit-input" %>
    </div>

    <div>
      <%= f.submit "Send Instructions", class: "edit-button", style: "margin-top: 25px; width: 180px;"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <br>
  <br>
</div>
