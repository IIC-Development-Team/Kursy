<div class="user-container">
  <div class="user_account_back" style="margin-top: 100px;">
    <div class="main-content">
        <div class="login-form">
          <h2 class="edit-acc">Zaloguj się</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class: "login-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input" %>
            </div>

            <div class="field">
              <%= f.label :Hasło, class: "login-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "login-input" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field remember-me">
                <%= f.check_box :remember_me, class: "remember-box" %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Zaloguj", class: "edit-button"%>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>