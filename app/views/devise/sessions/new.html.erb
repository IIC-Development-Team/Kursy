<div class="main-content">
    <div class="login-form">
      <h2>Zaloguj się</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "login-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input" %>
        </div>

        <div class="field">
          <%= f.label :Hasło, class: "login-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "login-input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Zaloguj", class: "login-submit"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>